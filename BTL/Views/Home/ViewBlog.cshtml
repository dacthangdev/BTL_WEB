@{
    Layout = "~/Views/Shared/Bloglay2.cshtml";
}
@model List<Blog>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    
    <meta name="viewport" content="width=device-width, initial-scale=1">
